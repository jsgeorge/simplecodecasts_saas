<div class="row">
  <div class="col-md-6 col-md-offset-3 ">
    <% if params[:plan] =='4' %>
    <h1 class="text-center">Pro Account</h1>
    <h4 class="text-center">Sign up for pro account for $10/month and get access to the community information</h4>
    <% else %>
     <h1 class="text-center">Basic Account</h1>
     <h4 class="text-center">Sign up for free and get basic ascewss to the commuyity</h4>
    <% end %>
  </div>
  
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      
        <h2>Sign up</h2>
        
        <% if params[:plan] =='4' %>
           <%= render "pro_form" %>
         <% else %>        
           <%= render "basic_form" %>
         <% end %>
         
    <%= render "devise/shared/links" %>
    
    </div>
  </div>
</div>